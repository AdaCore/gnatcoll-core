project Test_Project is
   Tgt := project'Canonical_Target;

   Sources := ("main.adb");

   case Tgt is
      when "x86-windows" | "x86_64-windows" |
           "x86-linux" | "x86_64-linux" |
           "x86_64-darwin" =>
         Sources := Sources & ("doot.ads");
      when others =>
         Sources := Sources;
   end case;

   for Source_Files use Sources;

end Test_Project;
