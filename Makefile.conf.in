PYTHON_VERSION=@PYTHON_VERSION@
PYTHON_BASE=@PYTHON_BASE@
PYGTK_INCLUDE=@PYGTK_INCLUDE@
PYGOBJECT_INCLUDE=@PYGOBJECT_INCLUDE@
PYGOBJECT_LIBS=@PYGOBJECT_LIBS@
PYTHON_DIR=@PYTHON_DIR@
GTK_INCLUDE=@GTK_GCC_FLAGS@
WITH_PYTHON=@WITH_PYTHON@
WITH_GTK=@WITH_GTK@
WITH_PYGOBJECT=@WITH_PYGOBJECT@
WITH_SYSLOG=@WITH_SYSLOG@
WITH_POSTGRES=@WITH_POSTGRES@
WITH_TEMPLATES=no   # Hard coded for now
WITH_GMP=@WITH_GMP@
WITH_ICONV=@WITH_ICONV@
WITH_PROJECTS=@WITH_PROJECTS@
GMP_CFLAGS=@GMP_CFLAGS@
GMP_LIBS=@GMP_LIBS@
POSTGRES_PATH=@PATH_LIBPQ@
BUILDS_SHARED=@GNAT_BUILDS_SHARED@
BUILDS_STATIC_PIC=@ENABLE_STATIC_PIC@
WITH_SQLITE=@WITH_SQLITE@
SQLITE_PATH=@PATH_LIBSQLITE@
ATOMICS=@SYNC_COUNTERS_IMPL@

WITH_XREF=no
ifeq (${WITH_PROJECTS},yes)
ifneq (${WITH_SQLITE},no)
WITH_XREF=yes
endif
endif

# Unless already set by the user to another value
ifeq ($(PROCESSORS),)
PROCESSORS=0
endif

DEFS=@DEFS@

TARGET_WIN32=no

# Extra options to pass to gprbuild, for instance -d
# to monitor the progress of the build
GPRBUILD_OPTIONS=

TARGET=@TARGET@
ifeq ($(TARGET),)
GPRBUILD=gprbuild $(GPRBUILD_OPTIONS)
GPRINSTALL=gprinstall
ifeq (${OS},Windows_NT)
     TARGET_WIN32=yes
endif
else
GPRBUILD=gprbuild --target=${TARGET} $(GPRBUILD_OPTIONS)
GPRINSTALL=gprinstall --target=${TARGET}
ifeq ($(filter-out %mingw32,${TARGET}),)
     TARGET_WIN32=yes
endif
endif

TARNAME=@PACKAGE_TARNAME@
VERSION=@PACKAGE_VERSION@
DESTDIR=
prefix=@prefix@
exec_prefix=@exec_prefix@
datarootdir=@datarootdir@
datadir=${DESTDIR}@datadir@
bindir=${DESTDIR}@bindir@
libdir=${DESTDIR}@libdir@
includedir=${DESTDIR}@includedir@

CP=cp -p

ifeq (${OS},Windows_NT)
LN_S=${CP}
else
LN_S=@LN_S@ -f
endif

Gnatcoll_Build?=@BUILD_TYPE@
export Gnatcoll_Build

ifeq (${TARGET_WIN32},yes)
EXE=.exe
else
EXE=
endif

ifeq (${OS},Windows_NT)
DIRSEP=;
else
DIRSEP=:
endif
